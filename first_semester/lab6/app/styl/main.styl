biggestwidth = 100%
bigwidth = 90%

setsamegrid(columns, rows)
    grid-template-columns repeat(columns, 1fr)
    grid-template-rows repeat(rows, 1fr)

a
    text-decoration none
    color #c6c9c5

body
    background-attachment fixed
    color white
    font-family 'Jost', sans-serif
    background-size 100%
    margin 0px
    padding 0px

header
    width biggestwidth
    margin 0px auto
    padding 0px
    background-color rgb(70, 60, 30)

name
    padding 50px
    font-size 20px

nav
	text-align left
    margin auto
	& a
		display inline-block
		padding 1%
		color colorText
		text-decoration: none
		&:hover
		&.active
			background-color rgb(80, 70, 40)
			color #f8f8f8

.topsearch
    display grid
    setsamegrid(2, 1)
    grid-template-areas ". search"
    align-items center
    text-align center
    justify-items center
    background-color rgb(83, 79, 64)
    height 30px
    

.search
    grid-area search
    width biggestwidth
    text-align right

input, button 
    border none
    outline none

button 
    background-color grey
    &:hover 
	    background: rgba(0,0,0,0);
	    color: #3a7999;


input 
    width bigwidth
    padding-left 15px

.threebigpic
    display grid
    width bigwidth
    margin auto
    grid-template-columns repeat(2,1fr)
    grid-template-rows 2fr 1fr

    img
        width 100%
        display block

.firstbigpic
    grid-column 1/span 2
    grid-row 1

.secondbigpic
    grid-column 1
    grid-row 2 

.thirdbigpic
    grid-column 2
    grid-row 2


.main-content
    display grid
    width bigwidth
    margin 5px auto
    setsamegrid(2, 4)
    grid-column-gap 20px
    font-size 1.2em
    .textc
        text-align justify
        overflow hidden
        display -webkit-box
        -webkit-line-clamp 2
        -webkit-box-orient vertical

    .bigarticle
        grid-row 1/span 4
        grid-column 1
        text-align justify
        padding 20px
        border solid thin grey

        .head
            text-align center
            margin 0px
            .textb
                text-align justify
                display -webkit-box

    .main-item
    grid-column 2
    text-align justify

    .head img
        margin 10px

.copyright
    float:left


.telegram
    float: right;

footer
	background-color red
    display flex

	& h4
		padding 5px
		color #f8f8f8

.about-heroes
    width 80%
    text-align center
    margin auto
    font-size 20px

.about-header
    margin 20px 0px
    font-size 2em

.about-center
    text-align center

.table
    margin auto
    
    td, th
        padding 5px      

.input
    width 80px
    height 1.2em
    margin 5px
    border 1px solid #969696
    font-family inherit
    font-size 16px

.bigpic
    height 100px
    border-radius 5px
    transition 0.5s
    &:hover
        transform scale(1.2)
.btn
    display inline-block
    padding 10px
    width 200px
    border 0
    background-color rgb(70, 60, 30)
    cursor pointer
    border-radius 5px
    font-family inherit
    font-size 16px
    color #fff
    &:hover
        background-color rgb(80, 70, 40)

@media (max-width 600px)

    .threebigpic
        margin-top 5px
        display grid
        width biggestwidth
        setsamegrid(1, 3)

    .firstbigpic
        grid-column 1
        grid-row 1
    
    .secondbigpic
        grid-column 1
        grid-row 2  
    
    .thirdbigpic
        grid-column 1
        grid-row 3

    .main-content
        grid-template-columns 1fr
        grid-template-rows 5fr repeat(4, 1fr)
        .bigarticle
            grid-row 1
            grid-column 1
            overflow hidden
            display -webkit-box
            -webkit-line-clamp 3
            -webkit-box-orient vertical
    
        .main-item
            grid-column 1
    nav
	    & a
            display block
            text-align center
        & name
            display block
            text-align center
            padding 1%
            
                
            
            
            
            
    