a
    text-decoration none
    color #c6c9c5

body
    background-attachment fixed
    color white
    font-family 'Jost', sans-serif
    background-size 100%
    margin 0px
    padding 0px

header
    width 100%
    margin 0px auto
    padding 0px
    background-color rgb(70, 60, 30)

name
    padding 50px
    font-size 20px

nav
	text-align left
    margin auto
	& a
		display inline-block
		padding 1%
		color colorText
		text-decoration: none
		&:hover
		&.active
			background-color rgb(80, 70, 40)
			color #f8f8f8

.topsearch
    display grid
    grid-template-columns 1fr 1fr
    grid-template-areas ". search"
    align-items center
    text-align center
    justify-items center
    background-color rgb(83, 79, 64)
    height 30px
    

.search
    grid-area search
    width 100%
    text-align right

input, button 
    border none
    outline none

button 
    background-color grey
    &:hover 
	    background: rgba(0,0,0,0);
	    color: #3a7999;


input 
    width 90%
    padding-left 15px
    
article

	width 80%
	margin 20px auto
	display grid
	grid-template-rows repeat(3, 1fr)
	grid-gap 4%
    

	& section
		display grid
		grid-template-columns 1fr 2fr
		grid-gap 2%
		align-items center
		border solid thin grey

		& h3
			grid-column 1/3
			margin 0
			text-align center

		& img
			width 200px
.copyright
    float:left


.telegram
    float: right;

footer
	background-color red

	& h4
		padding 5px
		color #f8f8f8



@media (max-width 1170px)
    body
        background-image url(../img/wp_main_small.jpg)